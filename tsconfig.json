{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node", "jest"],
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2018",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "es6", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
